---
import ProfileImgDiv from "./profileimg.astro";
const socialMedia = [
  {
    name: "Twitter",
    link: "https://twitter.com/puentes_pulido",
  },
  {
    name: "Github",
    link: "https://github.com/sebastianpuentespulido",
  },
  {
    name: "dev.to",
    link: "https://dev.to/johansebastianpuentes",
  },
  {
    name: "Instagram",
    link: "https://instagram.com/puentes_xd?",
  },
];

const fullName = "Johan Sebastian Puentes Pulido";
const phrase = "Web Developer and Student";
const open = "<";
const close = "/>";
---

<footer
  class="w-full h-72 dark:bg-primary bg-white flex flex-col justify-center items-center space-y-5 border-t-8 border-tertiary"
>
  <div class="w-full space-x-4 flex justify-center items-center">
    {
      socialMedia.map((el) => {
        return (
          <a class="links" role="link" aria-label="next page" href={el.link}>
            {el.name}
          </a>
        );
      })
    }
  </div>
  <img
    class={`w-[5rem] h-[5rem] border-4 border-tertiary rounded-[50%] object-cover`}
    src="/profile.png"
    alt="profile"
  />
  <h2 class="text-xl font-semiold dark:text-quaternary texttertiary">
    {fullName}
  </h2>
  <p class="text-2xl font-bold text-center">
    <span class="dark:text-tertiary text-tertiary">{open}</span><i
      class="dark:text-quaternary text-primary">{phrase}</i
    ><span class="dark:text-tertiary text-tertiary">{close}</span>
  </p>
  <style>
    .links {
      @apply dark:text-tertiary text-primary hover:underline text-lg;
    }
  </style>
</footer>
